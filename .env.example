# Backend selection: "mock" (default), "sharepoint", or "cosmos"
BACKEND=mock

# Transport: "stdio" (default, for Claude Code) or "http" (for Claude.ai/ChatGPT)
MCP_TRANSPORT=stdio
MCP_PORT=8000

# Auth mode: "proxy" (OAuthProxy for Railway), "easyauth" (Azure Container Apps), or "" (none/stdio)
AUTH_MODE=proxy

# Azure AD credentials (required when BACKEND=sharepoint or AUTH_MODE=proxy)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# SharePoint site name to search (BACKEND=sharepoint only)
SHAREPOINT_SITE_NAME=MarketingKnowledgeBase

# Remote server settings (required when MCP_TRANSPORT=http with AUTH_MODE=proxy)
# BASE_URL must be the public HTTPS URL of this server
BASE_URL=https://fourth-marketing-brain.up.railway.app
JWT_SIGNING_KEY=generate-a-random-32-char-string

# Cosmos DB settings (required when BACKEND=cosmos)
COSMOS_ENDPOINT=https://agent-architecture-cosmos.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE=mcp-content

# Azure AI Search settings (required when BACKEND=cosmos)
SEARCH_ENDPOINT=https://agent-demo-search.search.windows.net
SEARCH_KEY=your-search-admin-key
SEARCH_INDEX=mcp-marketing
