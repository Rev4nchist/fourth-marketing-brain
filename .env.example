# Backend selection: "mock" (default) or "sharepoint"
BACKEND=mock

# Transport: "stdio" (default, for Claude Code) or "http" (for Claude.ai/ChatGPT)
MCP_TRANSPORT=stdio
MCP_PORT=8000

# Azure AD credentials (required when BACKEND=sharepoint or MCP_TRANSPORT=http)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# SharePoint site name to search
SHAREPOINT_SITE_NAME=MarketingKnowledgeBase

# Remote server settings (required when MCP_TRANSPORT=http)
# BASE_URL must be the public HTTPS URL of this server
BASE_URL=https://fourth-marketing-brain.up.railway.app
JWT_SIGNING_KEY=generate-a-random-32-char-string
